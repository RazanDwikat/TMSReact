{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",  // تأكد من أن هذه القيمة هي ESNext أو ES6
    "moduleResolution": "node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true
  }
}
